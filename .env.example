# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# nGenius Configuration
NGENIUS_API_KEY=your-api-key
NGENIUS_OUTLET_ID=your-outlet-id
NGENIUS_API_URL=your-api-url

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URLs (comma-separated for multiple origins)
FRONTEND_URL=http://localhost:3000

# Brevo (Sendinblue) API Key
BREVO_API_KEY=your_brevo_api_key

# Brevo Email Template IDs
BREVO_ORDER_CONFIRMATION_TEMPLATE_ID=1  # Order confirmation template
BREVO_ORDER_PENDING_TEMPLATE_ID=2       # Order pending template
BREVO_ORDER_PROCESSING_TEMPLATE_ID=3    # Order processing template
BREVO_ORDER_READY_TEMPLATE_ID=4         # Order ready for pickup template
BREVO_ORDER_DELIVERY_TEMPLATE_ID=5      # Order out for delivery template
BREVO_ORDER_DELIVERED_TEMPLATE_ID=6     # Order delivered template
BREVO_ORDER_CANCELLED_TEMPLATE_ID=7     # Order cancelled template
BREVO_ORDER_COMPLETED_TEMPLATE_ID=8     # Order completed template

# Database Configuration
DATABASE_URL=your-database-url
DIRECT_URL=your-direct-database-url
